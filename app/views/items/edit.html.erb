<h1>Edit Item</h1>

<%= form_with(model: @item, url: update_path, local: true) do |form| %>
  

  <div class="field">
    <%= form.label :item %>
    <%= form.text_field :label %>
  </div>
<br>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
<br>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field( :price, in: 1.0..200.0, step: 0.05) %>
  </div>
<br>

    <div class="field">
    <%= form.label :item_type %>
  </div>

<br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', items_path %>